{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "types": [
      "node",
      "jest"
    ],
    "rootDir": "./src",
    "pretty": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "lib": [
      "es2018",
      "dom"
    ],
  },
  "exclude": [
    "node_modules",
    "lib",
    "esm",
    "jest.config.ts",
    "jest.config.*.ts",
  ]
}
